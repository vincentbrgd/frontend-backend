<html>
    <head>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
    <script src="{{ url_for('static', filename='script.js') }}"></script>
      </head>
    <h1>Notes</h1>
    <div id="notes">
        {% for note in notes %}
            <div class="note">
                <h2>{{ note.title }}</h2>
                <p>{{ note.content }}</p>
                <form method="POST">
                    <label for="note-{{ note.id }}">done</label>
                    <input
                        type="checkbox"
                        {%if note.done %} checked {%endif%}
                        data-id="{{ note.id }}"
                    >
                </form>
            </div>
        {% endfor %}
    </div>

</html>